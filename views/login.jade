extend layout

block content
   .container
      .row
         h2.col-md-offset-1 Please login to your account
      hr.row
      #form.row
         form#login(action='/login', method="post")   
            .form-group.row
               label.col-md-4.col-md-offset-2 Username   
               input.col-md-4(type='text', name="username") 
            .form-group.row
               label.col-md-4.col-md-offset-2 Password     
               input.col-md-4(type='password', name="password")  
            hr.row
            .form-group.row
               button#login_submit.btn.btn-primary.col-md-4.col-md-offset-6(type='submit') Connect
            hr.row
      .row
         button.btn.btn-success.col-md-4.col-md-offset-6(href='/signup' onClick='document.location.href="/signup"') Create an account
         
block footer